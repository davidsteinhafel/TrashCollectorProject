@model TrashCollector.Models.DayCustomerViewModel

@{
    ViewData["Title"] = "ConfirmPickup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ConfirmPickup</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmPickup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Employee.PickUpComplete" /> @Html.DisplayNameFor(model => model.Employee.PickUpComplete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Charge" class="control-label"></label>
                <input value="5.00" disabled class="form-control" />
                <span asp-validation-for="Employee.Charge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

